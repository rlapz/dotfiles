#!/bin/sh

#-------------------------#
#  _        _    ____      
# | |      / \  |  _ \ ____
# | |     / _ \ | |_) |_  /
# | |___ / ___ \|  __/ / / 
# |_____/_/   \_\_|   /___|
#-------------------------#


LANG_TARGET="id"
TEXT=$( xsel -p 2>/dev/null )


translate(){
    if [[ ! -z $TEXT ]]
    then
    	#echo -e $TEXT | trans :$LANG_TARGET

    	# test moetranslate
    	moetranslate auto id "$TEXT"
    	#moetranslate auto id -b "$TEXT"
    fi
}

clipboard(){
    if [[ -z $TEXT ]]
    then
        echo -en "No text was selected!\n" 
        input
    fi
    translate
}

play(){
    if [[ -z $TEXT ]]
    then
        echo -en "Input is empty!"
        main 
    fi

    echo -e "\n-> Playing..."
    trans -speak "$TEXT"

    #read -n 1 -r -s -p $'\nPress any key to continue...'
}

input(){
    echo -en "\nInput text: "
    read TEXT
}


#-----------------#

main(){
    echo -en "\n---------\n"
    echo "Press 'c' to continue. Press 'p' to play audio. Press 'q' to quit."

    while true; do
        read -n 1 k <&1
        case $k in
            "c")
                unset TEXT
                input
                translate
                main
                break
                ;;
            "p")
                clear
                play 
                main
                ;;
            "q")
                exit 0
                ;;
            *)
                echo "Unknown command"
                ;;
        esac
    done
}



#------#

HELP="\nTranslate-shell with window dialog\n
        Usage:
            trans-cli [OPTIONS]\n
             --help\t\tShow this messgages\n
             --clipboard\tTranslate using selected text or clipboard\n
             --play\t\tOnly play source language\n
             --input\tInput text manually\n\n"

OPT=$1
case $OPT in
    "--clipboard")
        clipboard
        ;;
    "--play")
        play
        ;;
    "--input")
        input
        translate
        ;;
    "--help")
        echo -en $HELP
        exit 0
        ;;
    *)
        echo -en $HELP
        exit 1
        ;;
esac

#--------------#
main
