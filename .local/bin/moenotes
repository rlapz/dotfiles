#!/bin/sh

readonly DIR="$HOME/Documents/Notes"
# preview lines max
readonly LINE=5

[ ! -d "$DIR" ] && mkdir "$DIR"
cd "$DIR" || exit

help_msg()
{
	cat << EOF
Moe Notes

Usage: moenotes [OPT]
       -s --show              - show all notes
       -d --delete [filename] - delete note
       -o --open [filename]   - new/open/edit note
       -h --help              - show help

Example: moenotes --open file1.txt
EOF
}

case "$1" in
"-d" | "--delete")
	[ -z "$2" ] && exit
	
	rm -i "$2"
	;;

"-o" | "--open")
	if [ -z "$2" ];
	then
		cd "$DIR" || exit
		$EDITOR

		exit 0
	fi
	
	$EDITOR + "$DIR/$2"
	;;

"-s" | "--show")
	clear
	for i in $(find "$DIR"/* | sort -r);
	do
		echo "[$i]"

		if [ "$( file -b --mime-type "$i" | sed 's|/.*||')" != "text" ];
		then
			printf "%s\n" "-- cannot read this file --"
		else
			head -n "$LINE" "$i"
			echo
		fi
		printf "\n%s\n" "-------------"

	done | less
	;;

"" | "-h" | "--help")
	help_msg
	;;

*)
	printf "%s\n\n" "Invalid argument!"
	help_msg

	exit 1
	;;
esac

exit 0

