#!/bin/bash

DIR="$HOME/Documents/Notes"

[[ ! -d "$DIR" ]] && mkdir "$DIR"

cd "$DIR" || exit

case "$1" in
	"d")
		[[ -z "$2" ]] && exit

		rm -i "$2"
		;;

	"o")
		if [ -z "$2" ];
		then
			cd "$DIR" || exit
			$EDITOR
			exit
		fi

		$EDITOR + "$DIR/$2"
		;;

	"h")
		echo -e "Moe Notes\n"
		echo "Usage:"
		echo -e "moenotes [Arg 1] [Arg 2]"
		echo -e " Arg:"
		echo -e "\td [filename] - delete note"
		echo -e "\to [filename] - open/edit note"
		echo -e "\th            - show help"

		;;
	*)
		clear
		for i in $(find "$DIR"/* | sort -r);
		do
			echo "--------"
			echo "[$i]"
			echo "--------"
			if [ "$( file -b --mime-type "$i" | sed 's|/.*||')" != "text" ];
			then
				echo "-- cannot read this file --"
			else
				cat "$i"
			fi
			echo ""
		done | less
		;;
esac
