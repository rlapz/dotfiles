#!/bin/sh

__SU="doas" # or sudo

#---------------------------------------------------#
help_msg()
{
	cat << EOF
srv [OPT] [SERVICE]
    -s       - Start service
    -S       - Stop service
    -r       - Restart service
    -l       - Show all serices
    -add     - Add new serivce
    -del     - Delete service
    -stat    - Show status
    -show    - Show all services
    -help    - Show help

Examples:
     srv -s     SERVICE
     srv -S     SERVICE
     srv -r     SERVICE
     srv -l
     srv -add   SERVICE
     srv -del   SERVICE
     srv -stat  SERVICE
     srv -show
     
EOF
}

err()
{
	printf "%s\n" "Invalid argument!" >&2
	help_msg >&2

	exit 1
}

start_srv()
{
	[ -z "$2" ] && err

	$__SU rc-service "$2" start
}

stop_srv()
{
	[ -z "$2" ] && err

	$__SU rc-service "$2" stop
}

restart_srv()
{
	[ -z "$2" ] && err

	$__SU rc-service "$2" restart
}

list_srv()
{
	rc-service -l | column
}

add_srv()
{
	[ -z "$2" ] && err

	$__SU rc-update add "$2"
}

del_srv()
{
	[ -z "$2" ] && err

	$__SU rc-update delete "$2"
}

stat_srv()
{
	if [ -n "$2" ]
	then
		rc-service "$2" status
	else
		rc-status
	fi
}

show_srv()
{
	rc-update show
}

#---------------------------------------------------#
case "$1" in
"-s")
	start_srv "$@"
	;;

"-S")
	stop_srv "$@"
        ;;

"-r")
	restart_srv "$@"
	;;

"-l")
	list_srv "$@"
	;;

"-add")
	add_srv "$@"
	;;

"-del")
	del_srv "$@"
	;;

"-stat")
	stat_srv "$@"
	;;

"-show")
	show_srv "$@"
	;;

"-help" | *)
	help_msg
	;;
esac

ret="$?"

if [ "$ret" -ne "0" ]
then
	printf "%s\n" "Error occured" >&2

	exit 1
fi

exit 0
