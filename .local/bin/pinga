#!/usr/bin/env python3

import sys
import os


srv_list = (
    "8.8.8.8",
    "google.com",
    "facebook.com",
    "reddit.com",
)


if len(sys.argv) != 2:
    print("pinga.py [INDEX]\n")

    for i, arr in enumerate(srv_list):
        print(f"{[i]} Pinging {arr}")

    sys.exit(0)

try:
    os.system(f'ping {srv_list[int(sys.argv[1])]}')

except ValueError:
    print("Invalid argument")
