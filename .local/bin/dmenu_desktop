#!/bin/sh


readonly DESKTOP_DIRS="/usr/share/applications \
                        $HOME/.local/share/applications"

readonly CACHE_F="/tmp/dmenu_dektop"
readonly FONT="xos4 Terminus:size=11"


if [ ! -f "$CACHE_F" ]
then
    for I in $DESKTOP_DIRS
    do
        cd "$I" || exit
        ls -- *.desktop >> "$CACHE_F"
    done
fi

sort "$CACHE_F" | sed 's/.desktop//' | dmenu "$@" -i -l 20 -fn "$FONT" -p "->" | xargs gtk-launch 2>/dev/null
