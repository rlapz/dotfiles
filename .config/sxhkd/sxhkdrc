mod4 + semicolon
    clipmenu -m -4 -z 700 -fn "xos4 Terminus:size=11" -p "Clipboard:"

alt+ ctrl + l
    locknow

# Brightness
XF86MonBrightness{Up,Down}
    brightness {up,down}

# Translator
mod4 + e
    st -e trans-cli --clipboard

mod4 + shift + e
    st -e trans-cli --play

mod4 + shift + i
    st -e trans-cli --input

# Screenshot
Print
    screensh --select

shift + Print
    screensh --selectwin

# Addtional
XF86HomePage
    firefox --private


mod4 + shift + p
    $TERMINAL -e vifm

