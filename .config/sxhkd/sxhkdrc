mod4 + semicolon
    clipmenu -m -4 -z 700 -fn "xos4 Terminus:size=11" -p "Clipboard:"

alt+ ctrl + l
    locknow

# Brightness
XF86MonBrightness{Up,Down}
    brightness {up,down}

# Translator
mod4 + e
    $TERMINAL -t transsh -e transsh --clipboard

mod4 + s
    $TERMINAL -t transsh -e transsh --speak

mod4 + shift + e
    $TERMINAL -t transsh -e transsh --input

mod4 + shift + s
    $TERMINAL -t transsh -e transsh --inputspeak

# Screenshot
Print
    screensh --select

shift + Print
    screensh --selectwin

# Addtional
XF86HomePage
    firefox --private


mod4 + shift + p
    $TERMINAL -e vifm

